{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "alwaysStrict": true,
    "skipLibCheck": true,
    "strict": true,
    "preserveConstEnums": true,
    "declaration": true,
    "module": "node16",
    "moduleResolution": "node16"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "test", "assets"]
}
